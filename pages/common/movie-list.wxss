.list{
  box-sizing: border-box;
    width: 33.33333%;
    padding-left: 3%;
    padding-right: 3%;
    margin-bottom: 20px;
    overflow: hidden;
    display: inline-block;
}
.h2{
    font-size: 24px;
    font-weight: normal;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    max-width: 660px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 20px;
    padding-left: 4%;
    padding-top: 20px;
}
.img image{
  width:206rpx;
  height: 310rpx;
}
.info text{
      font-size: 13px;
    font-weight: normal;
    padding: 5px 0 0;
    color: #494949;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}