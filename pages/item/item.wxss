.meta {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 40rpx;
}

.poster {
  width: 100%;
  height: 800rpx;
  margin: 20rpx;
}

.title {
  font-style: 42rpx;
  color: #444;
}

.info {
  font-size: 24rpx;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}

.summary {
  width: 80%;
  margin: 30rpx auto;
}

.label {
  display: block;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.content {
  color: #666;
  font-size: 22rpx;
  padding: 2em;
}

.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: .1;
}
.li{
    background-color: #effaf0;
    border: 1px solid #42bd56;
    display: inline-block;
    margin-right: 10px;
    font-size: 13px;
    padding: 5px 10px;
    border-radius: 15px;
    margin-bottom: 10px;
    padding-right: 10px;
}
.liil{
    position: relative;
    word-wrap: break-word;
    overflow: hidden;
    margin-top: 40rpx;
}
.desc{
  font-size: 0;
    line-height: normal;
    margin: 0 0 11px;
    color: #494949;
    position: relative;
}
.desc image{
  position: absolute;
    width: 36px;
    height:36px;
    border-radius: 50%;
    vertical-align: text-top;
    margin-right: 10px;
    float: left;
}
.user-info{
  margin-left: 43px;
  position: relative;
}
.user-name{
    font-size: 15px;
    display: block;
    margin-right: 6px;
}
.date{
    margin-top: 6px;
    font-size: 12px;
    color: #aaa;
    float: left;
}
.user-pl{
  display:block;
    font-size: 22rpx;
    line-height: 22px;
    color: #494949;
    padding-left:40rpx;
}
.btn-info {
    height: 22px;
    margin: 10rpx 0 0 0;
    padding-left:40rpx;

}
.btn-info image{
  width:20px;
  height:20px;
}
.btn-info .btn-num{
    color: #ccc;
    margin-left: 3px;
    position: relative;
    left: 0;
    top: -5px;
    font-size: 22rpx;
}
